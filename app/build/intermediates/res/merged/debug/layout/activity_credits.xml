        android:textStyle="normal|bold"
        android:layout_below="@+id/textView41"
        android:layout_alignStart="@+id/textView41" />

    <TextView
        android:text='Valentin "le bouc" Meunier'
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView41"
        android:textStyle="normal|bold"
        android:layout_below="@+id/textView38"
        android:layout_alignStart="@+id/textView38" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="setTrue"
        android:text='"A Christophe Story"'
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textStyle="normal|bold" />

    <TextView
        android:text="Application développée par"
