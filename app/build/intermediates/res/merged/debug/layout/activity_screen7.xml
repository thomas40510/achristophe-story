<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.studioquaiouest.myapplication.screen7">

    <TextView
        android:text="Veux-tu continuer ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView4"
        android:textSize="16sp" />

    <Button
        android:text="Oui !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_alignParentStart="true"
        android:id="@+id/yes"
        android:layout_alignParentEnd="true"
        android:onClick="jeveux" />

    <Button
        android:text="Je...sais...pas..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yes"
        android:layout_alignParentStart="true"
        android:id="@+id/no"
        android:layout_alignParentEnd="true"
        android:onClick="jeveuxpas" />

    <TextView
        android:text="En es-tu vraiment sÃ»r ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/confirm"
        android:textSize="16sp"
        android:layout_below="@+id/no"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <Button
        android:text="Oui putain !!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirm"
        android:layout_alignParentStart="true"
        android:id="@+id/yesyes"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:onClick="jesuissur" />

    <Button
        android:text="Finalement, je crois que oui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yesno"
        android:layout_below="@+id/yesyes"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:visibility="invisible"
        android:onClick="jesuissur" />

</RelativeLayout>
