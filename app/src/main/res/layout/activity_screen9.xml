<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen9"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.studioquaiouest.myapplication.screen9">

    <TextView
        android:text="Quelle heure est-il ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:textSize="16sp" />

    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timePicker"
        android:headerBackground="@android:color/holo_red_light"
        android:numbersSelectorColor="@android:color/holo_red_dark"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

    <Button
        android:text="confirmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:onClick="gotoScreen10" />

    <TextView
        android:text="Faux ! Apprend à lire l'heure !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtFaux"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="normal|bold"
        android:visibility="invisible"
        android:layout_above="@+id/confirm"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <Button
        android:text="skip si ça crash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="skip"
        android:visibility="invisible" />
</RelativeLayout>
