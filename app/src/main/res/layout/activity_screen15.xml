<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen15"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.studioquaiouest.myapplication.screen15">

    <TextView
        android:text="attention !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_dark"
        android:textAllCaps="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Au delà de ce point, l'âge minimum requis est de 935 ans."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textSize="16sp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="*Les CGU sont un roman que personne ne lit jamais, car écrit en police 5. Nous n'avons donc pas pris la peine de les écrire, vu que de toute façon vous êtes prêts à accepter n'importe quoi du moment que vous avez pas à lire un roman... Donc BLC !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView10"
        android:textSize="11sp" />

    <Button
        android:text="Je souhaite continuer !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bcontinue"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:onClick="gotoScreen16" />

    <CheckBox
        android:text="Je confirme avoir 935 ans ou plus et accepte les CGU*"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:id="@+id/cgucheck"
        android:layout_below="@+id/bcontinue"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Vous devez accepter les CGU pour continuer !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/msgerreur"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_red_light"
        android:layout_below="@+id/cgucheck"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />

</RelativeLayout>
