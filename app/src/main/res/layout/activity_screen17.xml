<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen17"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.studioquaiouest.myapplication.screen17">

    <TextView
        android:text="Je suis une mer, située entre l'Europe, le Caucase et l'Anatolie."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView11" />

    <TextView
        android:text="Large d'environ 1 150km d'ouest en est, et de 600km du nord au sud, je m'étends sur une superficie de 413 000km²."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView11"
        android:layout_alignParentStart="true"
        android:id="@+id/textView20" />

    <TextView
        android:text="L'adjectif me qualifiant , venant de mon nom antique, est &quot;pontique&quot;."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView20"
        android:layout_alignParentStart="true"
        android:id="@+id/textView22" />

    <TextView
        android:text="Je communique au nord avec la Mer d'Azov, et au sud-ouest avec la mer Méditrranée."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView22"
        android:layout_alignParentStart="true"
        android:id="@+id/textView23" />

    <TextView
        android:text="Je dispose d'un climat Méditerranéen l'été, mais continental l'hiver."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_alignParentStart="true"
        android:id="@+id/textView24" />

    <TextView
        android:text="Le 31 octobre est depuis 1996 la Journée Internationale pour ma protection."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView24"
        android:layout_alignParentStart="true"
        android:id="@+id/textView25" />

    <TextView
        android:text="Je suis je suis je suis..."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView26"
        android:layout_below="@+id/textView25"
        android:layout_alignParentStart="true"
        android:layout_marginTop="6dp" />

    <TextView
        android:text="C'est votre dernier mot ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLastWord"
        android:textSize="16sp"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/button11"
        android:layout_alignParentStart="true" />

    <Button
        android:text="C'est mon dernier mot !"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/blastword"
        android:onClick="gotoScreen18"
        android:visibility="invisible"
        android:layout_below="@+id/button11"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="500px"
        android:orientation="vertical"
        android:id="@+id/radioGroup"
        android:layout_below="@+id/textView26"
        android:layout_alignParentStart="true">

        <RadioButton
            android:text="La Mère Noire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:layout_marginTop="10dp" />

        <RadioButton
        android:text="La Maire Noire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton4" />

        <RadioButton
        android:text="La Mer Noire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radio_right" />

        <RadioButton
        android:text="L'amère Noire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton2" />

    </RadioGroup>

    <Button
        android:text="Confirmer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button11"
        android:onClick="confirm"
        android:layout_marginTop="115dp"
        android:layout_below="@+id/txtWrong"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="pas ce que tu as dit !!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtWrong"
        android:textColor="@android:color/holo_red_light"
        android:textAllCaps="false"
        android:visibility="invisible"
        android:layout_alignBaseline="@+id/textView26"
        android:layout_alignBottom="@+id/textView26"
        android:layout_toEndOf="@+id/textView26"
        android:layout_marginStart="10dp" />


</RelativeLayout>
