<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_screen11"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.studioquaiouest.myapplication.screen11">

    <TextView
        android:text="Christophe est :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView6"
        android:textSize="16sp" />

    <CheckBox
        android:text="Con"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:id="@+id/checkBox"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/textView6"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Soumis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:textSize="16sp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/checkBox"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Sans aucun respect pour Valentin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox3"
        android:textSize="16sp"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/checkBox2"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:text="Du genre à s'insulter lui-même"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:id="@+id/checkBox4"
        android:textSize="16sp"
        android:layout_below="@+id/checkBox3"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Je confirme !!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:id="@+id/confirm"
        android:onClick="gotoScreen12"
        android:layout_below="@+id/checkBox4"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Cherche mieux ;)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:id="@+id/faux"
        android:textSize="16sp"
        android:textColor="@android:color/holo_red_dark"
        android:fontFamily="sans-serif"
        android:layout_below="@+id/checkBox4"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />
</RelativeLayout>
